{
  "$schema": "./_schema.json",
  "id": "freshworks",
  "organization": "Freshworks",
  "primary_domain": "freshworks.com",
  "domains": {
    "freshdesk.com": {
      "type": "service",
      "category": "support"
    },
    "freshservice.com": {
      "type": "service",
      "category": "platform"
    },
    "freshworks.com": {
      "type": "primary",
      "category": "platform"
    }
  },
  "verification_patterns": [],
  "provider_aliases": [],
  "saas_tenants": [
    {
      "name": "Freshdesk",
      "patterns": [
        "{tenant}.freshdesk.com"
      ],
      "detection": {
        "success_indicators": [
          "Freshdesk",
          "freshdesk",
          "Support Portal"
        ],
        "failure_indicators": [
          "This portal is not configured",
          "page not found"
        ],
        "notes": "Check HTTP status - many invalid tenants return 404"
      }
    },
    {
      "name": "Freshservice",
      "patterns": [
        "{tenant}.freshservice.com"
      ],
      "detection": {
        "success_indicators": [
          "Freshservice",
          "freshservice",
          "support/home"
        ],
        "failure_indicators": [],
        "notes": "Invalid tenants return HTTP 404. Valid tenants return HTTP 200 and redirect to /support/home."
      }
    }
  ]
}